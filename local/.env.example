# VisaWire Local Voice Agent - Environment Configuration

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=visawire
POSTGRES_USER=visawire
POSTGRES_PASSWORD=visawire_local

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# SQLite (for local dev without PostgreSQL)
VISA_DB_PATH=./services/visa_db/visa.db

# LLM
LLM_BACKEND=ollama
LLM_MODEL=qwen2.5:7b
LLM_API_URL=http://localhost:11434
# For vLLM backend:
# LLM_BACKEND=vllm
# LLM_API_URL=http://localhost:8000/v1

# ASR
ASR_MODEL_PATH=shunyalabs/pingala-v1-universal
ASR_DEVICE=cuda

# TTS
TTS_ENGLISH_MODEL=Qwen/Qwen3-TTS-12Hz-1.7B-VoiceDesign
TTS_HINDI_MODEL=parler-tts/parler-tts-mini-v1
TTS_DEVICE=cuda

# API Server
API_HOST=0.0.0.0
API_PORT=8000
